{
    "name": "express-advanced-logging",
    "version": "0.1.0",
    "description": "Middleware de logging avanzado para Express con TypeScript (en desarrollo)",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:ci": "jest --runInBand --coverage",
        "test:verbose": "jest --verbose",
        "test:unit": "jest --testPathPattern=unit",
        "test:integration": "jest --testPathPattern=integration",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,tsx}\"",
        "prepare": "husky install",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "express",
        "logging",
        "middleware",
        "typescript",
        "winston",
        "development"
    ],
    "author": "Pedro Alexander Martinez Arthur",
    "license": "MIT",
    "dependencies": {
        "dotenv": "^16.5.0",
        "express": "^4.18.2",
        "uuid": "^9.0.0",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.3",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "prettier": "^3.5.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    }
}
